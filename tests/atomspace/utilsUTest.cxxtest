#include <opencog/atomspace/utils.h>

using namespace opencog;

class utilsUTest :  public CxxTest::TestSuite
{
private:

public:
    utilsUTest() {
    }

    void setUp() {
    }

    void tearDown() {
    }

    void testToString() {
        double d;
        d = 237874.123456;
        TS_ASSERT(toString(d) == "237874.123456");
        d = 237874.12345;
        TS_ASSERT(toString(d) == "237874.123450");
        d = 237874.1234;
        TS_ASSERT(toString(d) == "237874.123400");
        d = 237874.123;
        TS_ASSERT(toString(d) == "237874.123000");
        d = 237874.12;
        TS_ASSERT(toString(d) == "237874.120000");
        d = 237874.1;
        TS_ASSERT(toString(d) == "237874.100000");
        d = 237874.0;
        TS_ASSERT(toString(d) == "237874.000000");
        d = 237874;
        TS_ASSERT(toString(d) == "237874.000000");
    }
};
